#include<stdio.h>
 
int main()
{
    float usd;
    float thb;
    float exchange_rate = 31.50; 
     
    printf("  Enter Dollar (USD) amount : ");
    scanf("%f", &usd);
     
    thb = usd * exchange_rate;
     
    printf("\n");
    printf("  Exchange rate 1 (USD) = %.2f (THB)\n", exchange_rate);
    printf("  %.2f (USD) = %.2f (THB)\n\n", usd, thb);
     
    return 0;
}
